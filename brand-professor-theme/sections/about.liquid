  "name": "About",
  "settings": [
    {
      "type": "header",
      "content": "Heading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Born from Entrepreneurial Spirit"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Being dyslexic means I've always seen the world a bit differently—think of it as <span class=\"serif\">my secret superpower.</span>"
    },
    {
      "type": "header",
      "content": "Video"
    },
    {
      "type": "text",
      "id": "video_mp4",
      "label": "Video MP4 URL",
      "default": "https://cdn.prod.website-files.com/67976ce4e855d5a8a293e7ea%2F67c1dc01a3d84ef41a418a75_wide%20screen-transcode.mp4"
    },
    {
      "type": "text",
      "id": "video_webm",
      "label": "Video WebM URL",
      "default": "https://cdn.prod.website-files.com/67976ce4e855d5a8a293e7ea%2F67c1dc01a3d84ef41a418a75_wide%20screen-transcode.webm"
    },
    {
      "type": "text",
      "id": "video_poster",
      "label": "Video Poster URL",
      "default": "https://cdn.prod.website-files.com/67976ce4e855d5a8a293e7ea%2F67c1dc01a3d84ef41a418a75_wide%20screen-poster-00001.jpg"
    },
    {
      "type": "header",
      "content": "Text"
    },
    {
      "type": "textarea",
      "id": "body_text",
      "label": "Body Text",
      "default": "The Brand Professor is my way of sharing this hard-earned wisdom, mixing sharp creativity and compelling storytelling with practical results."
    },
    {
      "type": "textarea",
      "id": "secondary_text",
      "label": "Secondary Text",
      "default": "If you think you can forget what you learn here, good luck with that!"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Discover more about<br/>how I became a game-changer"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL",
      "default": "/pages/about"
    }
  ],
  "presets": [
    {
      "name": "About"
    }
  ]
}
{% endschema %}
