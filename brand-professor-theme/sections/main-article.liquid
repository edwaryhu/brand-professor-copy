<section>
  <div class="container" style="padding: 4rem 1rem; max-width: 48rem;">
    <h1>{{ article.title }}</h1>
    <p style="opacity: .6; margin-top: .5rem;">{{ article.published_at | date: '%B %d, %Y' }} &middot; {{ article.author }}</p>
    <div style="margin-top: 2rem; line-height: 175%;">
      {{ article.content }}
    </div>
    <a href="{{ blog.url }}" style="display: inline-block; margin-top: 2rem; color: var(--_color-mode---accent);">&larr; Back to {{ blog.title }}</a>
  </div>
</section>

{% schema %}
{
  "name": "Article",
  "settings": []
}
{% endschema %}
