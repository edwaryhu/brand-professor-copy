{%- comment -%}
  Header section: Navigation + Mood Selector
{%- endcomment -%}

{{ 'header.css' | asset_url | stylesheet_tag }}

<header id="header" class="header">
  <div class="container">
    <div class="header-content">

      {%- comment -%} Animated Lottie Logo (one per theme) {%- endcomment -%}
      <a href="/" class="header_logo">
        {%- render 'lottie-logos',
          lottie_base: section.settings.lottie_base,
          lottie_red: section.settings.lottie_red,
          lottie_blue: section.settings.lottie_blue,
          lottie_green: section.settings.lottie_green,
          lottie_white: section.settings.lottie_white,
          lottie_purple: section.settings.lottie_purple
        -%}
      </a>

      {%- comment -%} Nav + Mood Selector {%- endcomment -%}
      <div class="menu-wrap">
        <nav class="menu-navigation">
          {%- for block in section.blocks -%}
            {%- if block.type == 'navlink' -%}
              {%- render 'navlink', url: block.settings.url, label: block.settings.label -%}
            {%- endif -%}
          {%- endfor -%}
        </nav>

        {%- if settings.show_mood_selector -%}
          <div class="color-mode-selector">
            <div class="mood-selector_text">
              <div>Mood Selector</div>
            </div>
            <div class="mood-selector_colors">
              {%- render 'mood-button', mode: 'base', circle_class: 'is-orange', text_class: 'orange', line1: 'Timeless', line2: 'Clarity' -%}
              {%- render 'mood-button', mode: 'red', circle_class: 'is-red', text_class: 'red', line1: 'Fearless', line2: 'Adventure' -%}
              {%- render 'mood-button', mode: 'blue', circle_class: 'is-blue', text_class: 'blue', line1: 'Boundless', line2: 'Creativity' -%}
              {%- render 'mood-button', mode: 'green', circle_class: 'is-green', text_class: 'green', line1: 'Friendly', line2: 'Horizon' -%}
              {%- render 'mood-button', mode: 'white', circle_class: 'is-white', text_class: 'white', line1: 'Hyper', line2: 'Efficient' -%}
              {%- render 'mood-button', mode: 'purple', circle_class: 'is-purple', text_class: 'purple', line1: 'Mystic', line2: 'Vision' -%}
            </div>
          </div>
        {%- endif -%}
      </div>

      {%- comment -%} Mobile menu button {%- endcomment -%}
      <button class="menu-button">
        <div>Menu</div>
      </button>

    </div>
  </div>
</header>

