                    <path d="M0.494873 29.0264C7.91242 29.0335 10.3307 25.3707 10.6277 21.6937C12.1137 21.7111 13.5964 21.7008 15.0825 21.6937C15.3512 25.399 17.7907 29.0264 25.2153 29.0264L25.2153 25.802C16.5603 25.802 14.333 18.8936 14.333 15.3439L11.3772 15.3439C11.349 18.9219 9.14986 25.802 0.494873 25.802L0.494873 29.0264Z" fill="currentColor"/>
                    <path d="M0.494873 44.054C7.91242 44.0611 10.3307 40.3983 10.6277 36.7213C12.1137 36.7387 13.5964 36.7284 15.0825 36.7213C15.3512 40.4265 17.7907 44.054 25.2153 44.054L25.2153 40.8296C16.5603 40.8296 14.333 33.9212 14.333 30.3715L11.3772 30.3715C11.349 33.9494 9.14986 40.8296 0.494873 40.8296L0.494873 44.054Z" fill="currentColor"/>
                  </svg>
                </div>
              </div>
            </a>
          </div>

          {%- comment -%} Title + Form {%- endcomment -%}
          <div class="footer_title-form">
            <p text-split>{{ section.settings.form_title }}</p>
            <div class="footer-form">
              <form id="footer-form" class="footer-form" onsubmit="return false;">
                <input class="footer-input" maxlength="256" name="Email" placeholder="Your email" type="email" required/>
                <button type="submit" class="button-icon is-footer arrow-rotate" onclick="handleFooterForm(this)">
                  <div class="icon-arrow">
                    {%- render 'icon-arrow-diagonal' -%}
                  </div>
                </button>
              </form>
            </div>
            <a href="{{ section.settings.book_call_url }}" target="_blank" class="banner_button arrow-rotate footer-button">
              <div class="button-text is-banner">
                <div class="text-base">
                  <p text-split>{{ section.settings.book_call_text }}</p>
                  <div class="banner-button_line is-1"></div>
                  <div class="banner-button_line is-2"></div>
                </div>
              </div>
              <div class="button-icon is-banner">
                <div class="icon-arrow">
                  {%- render 'icon-arrow-diagonal' -%}
                </div>
              </div>
            </a>
          </div>
        </div>
      </div>

    </div>

    <p class="t--footer-copyright" text-split>&copy; {{ shop.name }} {{ 'now' | date: '%Y' }}</p>
  </div>
</footer>

