{%- comment -%}
  Footer section: Logo + Address + Nav buttons + Form + Book a call
{%- endcomment -%}

{{ 'footer.css' | asset_url | stylesheet_tag }}

<footer id="footer" class="footer">
  <div class="container">
    <div class="footer-wrap">

      {%- comment -%} Footer Logo (Lottie, one per theme) {%- endcomment -%}
      <a href="/" class="footer-logo">
        <lottie-player class="lottie-logo content-base"
          src="{{ section.settings.lottie_base }}"
          background="transparent" speed="1" loop autoplay></lottie-player>
        <lottie-player class="lottie-logo content-red"
          src="{{ section.settings.lottie_red }}"
          background="transparent" speed="1" loop autoplay></lottie-player>
        <lottie-player class="lottie-logo content-blue"
          src="{{ section.settings.lottie_blue }}"
          background="transparent" speed="1" loop autoplay></lottie-player>
        <lottie-player class="lottie-logo content-green"
          src="{{ section.settings.lottie_green }}"
          background="transparent" speed="1" loop autoplay></lottie-player>
        <lottie-player class="lottie-logo content-white"
          src="{{ section.settings.lottie_white }}"
          background="transparent" speed="1" loop autoplay></lottie-player>
        <lottie-player class="lottie-logo content-purple"
          src="{{ section.settings.lottie_purple }}"
          background="transparent" speed="1" loop autoplay></lottie-player>
      </a>

      {%- comment -%} Footer Info {%- endcomment -%}
      <div class="footer_info-wrap">

        {%- comment -%} Address block {%- endcomment -%}
        <address class="footer_address">
          <div class="address-wrap">
            <p text-split>{{ section.settings.inquiries_label }}</p>
            <a href="mailto:{{ section.settings.email }}" class="textlink" text-split>{{ section.settings.email }}</a>
          </div>
          <div class="address-wrap">
            <p text-split>{{ section.settings.location_1 }}</p>
            <p text-split>{{ section.settings.location_2 }}</p>
          </div>
          <div class="address-wrap">
            {%- if section.settings.linkedin_url != blank -%}
              <a href="{{ section.settings.linkedin_url }}" target="_blank" class="textlink" text-split>LI</a>
            {%- endif -%}
            {%- if section.settings.instagram_url != blank -%}
              <a href="{{ section.settings.instagram_url }}" target="_blank" class="textlink" text-split>IG</a>
            {%- endif -%}
          </div>
        </address>

        {%- comment -%} Right column: nav links + form {%- endcomment -%}
        <div class="footer-form-content">
          <div class="footer_navigation-links">
            <div class="footer_line"></div>
            <a href="{{ section.settings.next_page_url }}" class="footer-btn foot-btn-hor">
              <div text-split>Next page</div>
              <div class="footer-btn_icon">
                <div class="footer_arrow arrow-hor">
                  <svg xmlns="http://www.w3.org/2000/svg" width="100%" viewBox="0 0 30 26" fill="none">
                    <path d="M23.5287 11.7408L23.5287 10.9912C19.8517 10.6943 16.1889 8.27595 16.196 0.858398H19.4204C19.4204 9.51338 26.3006 11.7125 29.8785 11.7408V14.6965C26.3288 14.6965 19.4204 16.9239 19.4204 25.5788L16.196 25.5789C16.196 18.1542 19.8235 15.7147 23.5287 15.446L23.5287 14.6965H0.0951781L0.0668945 11.7125L23.5287 11.7408Z" fill="currentColor"/>
                  </svg>
                </div>
                <div class="footer-arrow-hover-hor">
                  <svg xmlns="http://www.w3.org/2000/svg" width="100%" viewBox="0 0 45 26" fill="none">
                    <path d="M30.3877 0.838745C30.3806 8.25629 34.0434 10.6746 37.7204 10.9716C37.703 12.4576 37.7133 13.9403 37.7204 15.4264C34.0152 15.6951 30.3877 18.1346 30.3877 25.5592L33.6121 25.5592C33.6121 16.9042 40.5205 14.6768 44.0702 14.6768V11.7211C40.4923 11.6928 33.6121 9.49373 33.6121 0.838745H30.3877Z" fill="currentColor"/>
