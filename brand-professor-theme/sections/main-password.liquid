<section>
  <div class="container" style="padding: 6rem 1rem; text-align: center;">
    <h1>{{ shop.name }}</h1>
    <p style="margin-top: 1rem; font-size: 1.125rem;">Opening soon</p>
    {%- form 'storefront_password' -%}
      <div style="margin-top: 2rem;">
        <input type="password" name="password" placeholder="Enter password" style="padding: .75rem 1rem; border: 1px solid var(--_color-mode---shape); border-radius: .5rem; background: transparent; color: var(--_color-mode---text-main); font-family: inherit;"/>
        <button type="submit" style="padding: .75rem 1.5rem; background: var(--_color-mode---accent); color: var(--_color-mode---background); border-radius: .5rem; font-weight: 500; margin-left: .5rem;">Enter</button>
      </div>
    {%- endform -%}
  </div>
</section>

{% schema %}
{
  "name": "Password",
  "settings": []
}
{% endschema %}
