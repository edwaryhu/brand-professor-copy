{%- comment -%}
  Banner section: Colored banner with heading + CTA button
{%- endcomment -%}

{{ 'banner.css' | asset_url | stylesheet_tag }}

<section>
  <div class="container">
    <div class="banner">
      <div class="banner_content-wrap">
        <div class="banner_title">
          <h2 text-split>{{ section.settings.heading }}</h2>
        </div>
        <a href="{{ section.settings.cta_url }}"{% if section.settings.cta_url contains '://' %} target="_blank"{% endif %} class="banner_button">
          <div class="button-text">
            <div class="text-base">
              <p text-split>{{ section.settings.cta_text }}</p>
              <div style="width:0px" class="banner-button_line is-1"></div>
            </div>
          </div>
          <div class="button-icon">
            <div class="icon-arrow">
              {%- render 'icon-arrow-diagonal' -%}
            </div>
          </div>
        </a>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Stop playing Hide & Seek with your brand's strategy"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "Ready to build an <span class=\"serif black-underline\">unforgettable</span> brand?"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "Button URL",
      "default": "https://form.typeform.com/to/gUc15P3Y"
    }
  ],
  "presets": [
    {
      "name": "Banner"
    }
  ]
}
{% endschema %}
